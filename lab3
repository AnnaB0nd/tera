       <!--опишем объект-->
	<script type="text/babel"> 
	


    ReactDOM.render(
	
        <div className={userClassName}  style={styleObj1}>
                <p>Полное имя: {user.getFullName()}</p>
                <p>Возраст: {user.age}</p>
        </div>,
        document.getElementById("app1")
    )

    ReactDOM.render(
        <div className={userClassName}  style={styleObj2}>
                <p>Полное имя: {user2.getFullName()}</p>
                <p>Возраст: {user2.age}</p>
        </div>,
        document.getElementById("app2")
    )

    ReactDOM.render(
        <div className={userClassName}  style={styleObj3}>
                <p>Полное имя: {user3.getFullName()}</p>
                <p>Возраст: {user3.age}</p>
        </div>,
        document.getElementById("app3")
    )
   </script>

    <script> 
    const userClassName = "user-info";
    const styleObj1 = {
        color:'green', 
        fontFamily:'Verdana'

    }
    const styleObj2 = {
        color:'purple', 
        fontFamily:'Open Sans'

    }
    const styleObj3 = {
        color:'black', 
        fontFamily:'Arial'

    }
    const user = {
        id : 1,
        age: 22,
        firstName: 'Anna',
        lastName: 'Bondarenko',
        getFullName: function(){ 
            return `${this.firstName} ${this.lastName}`;
        }
    };

    const user2 = {
        id : 2,
        age: 30,
        firstName: 'Emma',
        lastName: 'Watson',
        getFullName: function(){ 
            return `${this.firstName} ${this.lastName}`;
        }
    };

    const user3 = {
        id : 3,
        age: 44,
        firstName: 'Sherlock',
        lastName: 'Holmes',
        getFullName: function(){ 
            return `${this.firstName} ${this.lastName}`;
        }
    };

     </script>

   <!--поместим описанный объект-->
   <div id="app"> </div>
   <div id="app1"> </div>
   <div id="app2"> </div>
   <div id="app3"> </div>





